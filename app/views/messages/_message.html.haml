.chat-main__message-list__info
  .chat-main__message-list__info__member
    = message.user.name
  .chat-main__message-list__info__create-at
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.chat-main__message-list__messages
  - if message.content.present?
    %p.chat-main__message-list__messages__content
      = message.content
  = image_tag message.image.url, class: 'chat-main__message-list__messages__image' if message.image.present?